{
  "name": "tpp-monitoring",
  "version": "1.0.0",
  "description": "Thyrotoxic Periodic Paralysis Monitoring System",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && live-server --port=8080 --entry-file=index.html",
    "install:all": "cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2"
  }
}
